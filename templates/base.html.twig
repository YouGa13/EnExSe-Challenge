<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block body %}
        
			{# Formulaire de tous les ajouts et modifications dans le portail d'administration #}
			{% if form  %}
				{% if updating %}
					<h1>
						<span>Formulaire de modification d'un Utilisateur</span>
					</h1>
				{% else %}
					<h1>
						<span>Formulaire d'ajout d'un Utilisateur</span>
					</h1>
				{% endif %}
					{{ form_start( form ) }}
						{{ form_row( form.gender) }}
						{{ form_row( form.username) }}
						{{ form_row( form.fullname) }}
						{{ form_row( form.userAdress) }}
						{{ form_row( form.userContact) }}
						{{ form_row( form.email) }}
						{{ form_row( form.dateOfBirth) }}
						{{ form_row( form.roles) }}
				{% if updating %}
					<button type="submit" class="btn btn-lg btn-primary tag1">
						<span>Modifier<span>
					</button>
				{% else %}
					<button type="submit" class="btn btn-lg btn-primary tag1">
						<span>Ajouter</span>
					</button>
				{% endif %}
						{{form_end(form)}}
			{% endif %}

        {% endblock %}
    </body>
</html>
